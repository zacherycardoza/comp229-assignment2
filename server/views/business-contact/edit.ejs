<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1 class="title"><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField" class="title">Name</label>
                    <input type="text" class="input1"
                    id="nameTextField"
                    placeholder="Enter the Contact's Name"
                    name="name" 
                    value="<%= businessContact.name %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="emailTextField" class="title">Email</label>
                    <input type="email" class="input1"
                    id="emailTextField"
                    placeholder="Enter the Contact's Email"
                    name="email" 
                    value="<%= businessContact.email %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="phoneNumberTextField" class="title">Phone Number</label>
                    <input type="text" class="input1"
                    id="phoneNumberTextField"
                    placeholder="Enter the Contact's Phone Number"
                    name="phoneNumber" 
                    value="<%= businessContact.phoneNumber %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="noteTextArea" class="title">Note</label>
                    <textarea type="text" class="input1"
                    id="noteTextArea"
                    placeholder="(Optional) Contact Note"
                    name="note" 
                    value="<%= businessContact.note %>">
                    </textarea>
                </div>

                <button class="form-btn btn-sm" type="submit">Update Contact</button>
                <button class="form-btn btn-sm" type="button" onclick="javascript:location.href='/business-contact-list'">Discard Changes</button>       
                <button class="form-btn btn-sm" type="button" onclick="javascript:location.href='/business-contact-list/delete/<%= businessContact._id %>'">Delete Contact</button>

            </form>
        </div>

    </div>
</div>


<%- include ../partials/bottom_nav.ejs %>  

<%- include ../partials/footer.ejs %>